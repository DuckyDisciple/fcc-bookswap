doctype html
html
    head
        title Search Results
        link(rel="stylesheet" href="/client/css/main.css" type="text/css")
    include ./includes/header.jade
    body.search-page
        .container.results
            img.logo-results(src="/client/img/BookswapLogo.png")
            .search-widget
                form(action="/search" method="get")
                    input.search-box(type="text" name="query")
                    input.submit(type="submit" value="SEARCH")
            h2 Search Results
            each val in results
                .result
                    a.book-link(href="/book/"+val._id)
                        p.book-title= val.title
                    p.book-desc= val.description
        script(type="text/javascript" src="/common/ajax-functions.js")
        script(type="text/javascript" src="/controllers/userController.client.js")